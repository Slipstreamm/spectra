# backend/config.toml

[site]
name = "Spectra Gallery"
description = "A highly customizable open-source image board."
# default_theme = "dark" # Managed by JS localStorage, but could be a server default if needed for first load prior to JS.

[theme.dark] # Dark Theme Colors
bg_color = "#1a1a1a"
text_color = "#e0e0e0"
primary_color = "#64ffda" # Accent
secondary_color = "#8892b0" # Less prominent text
card_bg_color = "#2a2a2a"
border_color = "#444"
header_bg_color = "#222"
button_bg_color = "#333"
button_text_color = "#e0e0e0"
button_hover_bg_color = "#444"
input_bg_color = "#252525"
input_border_color = "#555"
modal_bg_color = "rgba(0, 0, 0, 0.8)"
modal_content_bg_color = "#2c2c2c"

[theme.light] # Light Theme Colors
bg_color = "#f4f4f4"
text_color = "#333"
primary_color = "#007bff"
secondary_color = "#555"
card_bg_color = "#ffffff"
border_color = "#ddd"
header_bg_color = "#efefef"
button_bg_color = "#e0e0e0"
button_text_color = "#333"
button_hover_bg_color = "#d0d0d0"
input_bg_color = "#fff"
input_border_color = "#ccc"
modal_bg_color = "rgba(0, 0, 0, 0.5)"
modal_content_bg_color = "#fff"

[database]
host = "localhost"
port = 5432
user = "postgres"  # Replace with your actual DB user
password = "password" # Replace with your actual DB password
name = "spectra_db"

[redis]
host = "localhost"
port = 6379
db = 0 # Default Redis DB

[security]
# IMPORTANT: Change this in your actual deployment!
# Generate a new one using, for example: openssl rand -hex 32
secret_key = "your-super-secret-and-unique-key-please-change-me"
access_token_expire_minutes = 30
# Rate limits (examples, adjust as needed)
upload_rate_limit = "10/minute"
default_rate_limit = "200/minute"
